@using Microsoft.AspNetCore.Components.Web
@namespace ADAPH.TxSubmit.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="ADAPH.TxSubmit.styles.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
    <script type="text/javascript">
        function blazorGetTimezoneOffset() {
            return new Date().getTimezoneOffset();
        }
    </script>
</head>

<body>
    @RenderBody()

    <div id="blazor-error-ui">
        <div class="reconnect-display">
            <div class="mud-paper mud-elevation-3 pa-4 reconnect-message-box">
                <h2>You have been disconnected. Please reconnect to continue.</h3>
                    <a onclick="location.reload()" class="align-self-end mt-4 mud-button-root mud-button mud-button-filled mud-button-filled-primary mud-button-filled-size-medium mud-ripple">Reconnect</a>
            </div>
        </div>
    </div>
    <div id="components-reconnect-modal" class="reconnect-display components-reconnect-hide">
        <div class="mud-paper mud-elevation-3 pa-4 reconnect-message-box">
            <h2>You have been disconnected. Please reconnect to continue.</h3>
                <a onclick="location.reload()"
                    class="align-self-end mt-4 mud-button-root mud-button mud-button-filled mud-button-filled-primary mud-button-filled-size-medium mud-ripple">Reconnect</a>
        </div>
    </div>
    <script src="_framework/blazor.server.js"></script>
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
</body>

</html>

@inherits LayoutComponentBase

<PageTitle>H.Y.P.E. | Cardano Tx Submit Service</PageTitle>
<MudThemeProvider @bind-IsDarkMode="@IsDarkMode" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudAppBar Color="Color.Primary" Fixed="false" Class="d-flex justify-center">
	<NavLink href="/" Class="hype-logo">
		<img alt="HYPE_LOGO" src="images/HYPE_LOGO.svg" class="hype-logo">
	</NavLink>
	<MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
		<MudText Typo="Typo.h6" Class="mr-auto ml-4">Cardano Tx Submit Service</MudText>
	</MudHidden>
	<MudHidden Breakpoint="@Breakpoint.MdAndUp" Invert="false">
		<MudText Typo="@Typo.subtitle2" Class="mr-auto ml-4" Align="@Align.Center">Cardano Tx Submit Service</MudText>
	</MudHidden>
	<MudSpacer />
	<MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="@Color.Inherit" Link="https://github.com/ADAPhilippines/ADAPH.TxSubmit"/>
	<MudSwitch Checked="@IsDarkMode" T="bool" Color="@Color.Warning"
		ThumbIcon="@(IsDarkMode ? @Icons.Filled.DarkMode : Icons.Filled.LightMode)" Class="flex-shrink-1 mr-n2" CheckedChanged="@OnThemeChanged"/>
</MudAppBar>

@Body
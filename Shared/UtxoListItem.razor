@namespace ADAPH.TxSubmit.Shared
<MudBreakpointProvider OnBreakpointChanged="OnBreakPointChanged">
	@if (Utxo is not null)
	{
		<MudListItem class="d-flex flex-col">
			<MudText Align="Align.Left" Class="word-break">@Utxo.Address</MudText>
			<MudText Align="@TokenTextAlign" Class="mt-2 word-break" Color="Color.Success">@Utxo.Amount â‚³</MudText>
			@if (Utxo.Assets is not null)
			{
				@foreach (var asset in Utxo.Assets)
				{
					<MudText Align="@TokenTextAlign" Class="word-break">@asset.Quantity @asset.Name</MudText>
				}
			}
		</MudListItem>
	}
</MudBreakpointProvider>
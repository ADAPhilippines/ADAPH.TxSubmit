@namespace ADAPH.TxSubmit.Shared
<MudBreakpointProvider OnBreakpointChanged="OnBreakPointChanged">
	@if (Inputs is not null)
	{
		@foreach (var input in Inputs)
		{
			<MudListItem class="d-flex flex-col">
				<MudText Align="Align.Left" Class="word-break">@input.Address</MudText>
				<MudText Align="@TokenTextAlign" Class="mt-2 word-break" Color="Color.Success">@input.Amount â‚³</MudText>
				@if (input.Amount is not null)
				{
					@foreach (var asset in input.Amount)
					{
						<MudText Align="@TokenTextAlign" Class="word-break">@asset.Quantity @asset.Unit</MudText>
					}
				}
			</MudListItem>
		}
	}
	</MudBreakpointProvider>